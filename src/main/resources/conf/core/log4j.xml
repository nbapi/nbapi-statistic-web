<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<!-- 控制台输出 -->
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<!-- 系统启动日志输出文件 -->
	<appender name="fileAppender" class="com.elong.common.util.log.ElongDailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/system.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	
	<!--actionLogEntity appender -->
	<appender name="actionLogEntityAppender" class="com.elong.common.util.log.ElongDailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/hotel-statistic_actionlogentity.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH-mm" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<appender name="globalExceptionAppender" class="com.elong.common.util.log.ElongDailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/hotel-statistic_globalexception.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH-mm" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<!--actionLogEntity appender -->
	<appender name="scheduleLogEntityAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/schedule_logentity.log" />

		<param name="DatePattern" value="'.'yyyy-MM-dd-HH'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<!-- 实时日志输出文件 -->
	<appender name="businessMinitorAppender" class="com.elong.common.util.log.ElongDailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/businessMinitor.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
		</filter>
	</appender>

	<!-- 实时日志输出文件 -->
	<appender name="realLogAppender" class="com.elong.common.util.log.ElongDailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/realLog.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
		</filter>
	</appender>

	<logger name="schedulelogger">
		<level value="INFO" />
		<appender-ref ref="scheduleLogEntityAppender" />
	</logger>

	<category name="actionLogEntityLogger" additivity="true">
		<level value="INFO" />
		<appender-ref ref="actionLogEntityAppender" />
	</category>

	<category name="globalExceptionLogger" additivity="true">
		<level value="INFO" />
		<appender-ref ref="globalExceptionAppender" />
	</category>

	<logger name="realLogger">
		<level value="INFO" />
		<appender-ref ref="realLogAppender" />
	</logger>
	
	<logger name="businessMinitorLogger">
		<level value="INFO" />
		<appender-ref ref="businessMinitorAppender" />
	</logger>
	
	<root>
		<level value="INFO" />
		<appender-ref ref="fileAppender" />
	</root>

</log4j:configuration>
